<% include partials/head %>

    <body onload="getLocation()">
        <div id="root" class="w-container">
            <img id="loading" src="/images/spinner.svg" alt="Loading" />
        </div>

        <div id="outlook" class="w-container hidden">
            <span class="type">24 hour outlook</span>
            <table id="outlook-data">
                <tr>
                    <td class="title">Forecast</td>
                    <td class="data"><%= outlookData.general.forecast %></td>
                </tr>
                <tr>
                    <td class="title">Temperature</td>
                    <td class="data">
                        <%= outlookData.general.temperature.high %> /
                        <%= outlookData.general.temperature.low %>
                    </td>
                </tr>
                <tr>
                    <td class="title">Humidity</td>
                    <td class="data">
                        <%= outlookData.general.relative_humidity.high %>% /
                        <%= outlookData.general.relative_humidity.low %>%
                    </td>
                </tr>
                <tr>
                    <td class="title">Wind</td>
                    <td class="data">
                        <%= outlookData.general.wind.speed.high %> /
                        <%= outlookData.general.wind.speed.low %>
                    </td>
                </tr>
            </table>
        </div>

        <div id="location">
            <div id="userLocationWrapper"></div>
            <select id="selectLocation" class="hidden" onchange="selectLocation(this)">
                <%- locationList %>
            </select>
        </div>

        <div id="utilities">
            <p>
                Data problems?
                Try <a href="#" onclick="sessionForget(); return false">clearing session storage.</a>
            </p>
        </div>

        <% include partials/footer %>
    </body>
</html>
